@{
	ViewData["title"] = "Lista de Categoría";
}

<div class="container mg-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de Categorías</h2>
		</div>
		<div class="col-4 text-right">
			<a asp-action="Create" class="btn btn-sm btn-success"><i class="fas fa-plus"></i>Crear nueva categoría</a>
		</div>
	</div> 

	<br />
	<br />
	<table id="tblCategorias" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>N°</th>
				<th>Nombre</th>
				<th>Orden</th>
				<th>Acciones</th>
			</tr>
		</thead>
	</table>
</div>

@section Scripts {
	<script src="~/js/categoria.js" asp-append-version="true"></script>
}