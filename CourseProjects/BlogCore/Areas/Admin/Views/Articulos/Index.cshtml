@{
	ViewData["title"] = "Lista de Articulos";
}

<div class="container mg-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de Articulos</h2>
		</div>
		<div class="col-4 text-end">
			<a asp-action="Create" class="btn btn-sm btn-success"><i class="fas fa-plus"></i>Crear nuevo Articulo</a>
		</div>
	</div>

	<br />
	<br />
	<table id="tblArticulos" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>N°</th>
				<th>Nombre</th>
				<th>Descripcion</th>
				<th>Categoria</th>
				<th>Fecha de creacion</th>
				<th>Acciones</th>
			</tr>
		</thead>
	</table>
</div>


@section Scripts{
	<script src="~/js/articulo.js" asp-append-version="true"></script>
}