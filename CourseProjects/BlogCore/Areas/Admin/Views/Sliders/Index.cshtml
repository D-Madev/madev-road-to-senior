@{
	ViewData["title"] = "Lista de Sliders";
}

<div class="container mg-4">
	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de Sliders</h2>
		</div>
		<div class="col-4 text-end">
			<a asp-action="Create" class="btn btn-sm btn-success"><i class="fas fa-plus"></i>Crear nuevo Slider</a>
		</div>
	</div>

	<br />
	<br />
	<table id="tblSliders" class="table table-striped table-bordered" style="width: 100%">
		<thead>
			<tr>
				<th>N°</th>
				<th>Imagen</th>
				<th>Nombre</th>
				<th>Estado</th>
				<th>Acciones</th>
			</tr>
		</thead>
	</table>
</div>


@section Scripts {
	<script src="~/js/slider.js" asp-append-version="true"></script>
}
@{
}
